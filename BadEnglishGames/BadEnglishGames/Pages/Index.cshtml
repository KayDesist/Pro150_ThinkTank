@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <h1>Welcome to Bad English Games</h1>
    <div class="games-container">
        @foreach (var game in Model.Games)
        {
            <a href="@game.Route">
                <partial name="GameWidget" model="game" />
            </a>
        }
    </div>
</div>