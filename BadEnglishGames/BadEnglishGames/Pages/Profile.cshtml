@page
@using System.Web.Helpers
@model BadEnglishGames.Pages.ProfileModel
@{
    
}

<body>

    <section>
    <h1>Profile Page</h1>
    @if (!string.IsNullOrEmpty(Model.image?.path))
{
    <div style="width: 100px; height: 100px; border-radius: 50%; overflow: hidden;">
        <img src="@Model.image.path" alt="Profile Picture" style="width: 100%; height: 100%; object-fit: cover;" />
    </div>
}
    <form method="post" enctype="multipart/form-data">
        <div>
            <label for="Username">Username: </label>
            <input type="text" id="Username" name="Username" value="@Model.UserName" disabled />
        </div>

        <div>
            <label for="UserDescription">Description:</label>
            <textarea id="UserDescription" asp-for="UserDescription" rows="4" cols="50"></textarea>
        </div>

        <div>
            <label for="File1">Choose Image:</label>
            <input id="File1" type="file" asp-for="image.file" />
        </div>

        <button type="submit">Save</button>
    </form>

        

        <div>
            <!--Top 3 Game Scores-->
        </div>
    </section>

</body>