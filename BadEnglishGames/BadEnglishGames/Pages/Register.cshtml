@page
@model BadEnglishGames.Pages.RegisterModel
@{
    
}
<head>
    <link rel="stylesheet" href="~/css/Registry.css" />
</head>
<div class="not-main">
    <div class="wrapper">
        <form method="post" asp-page-handler="SignUp">
            <h2>Register</h2>
            <div class="input-field">
                <input type="text" placeholder="Username" asp-for="@Model.temp.username" required />
                
            </div>
            <div class="input-field">
                <input type="password" placeholder="Password" asp-for="@Model.temp.password" required />
                
            </div>
            <div class="input-field">
                <input type="password" placeholder="Confirm Password" asp-for="@Model.Confirm" required />
                
            </div>
            <button type="submit" asp-page-handler="SignUp" >Sign Up Now</button>
            <div class="Login">
                <p class="Question">Already Have an Account? <a asp-page="/Login">Log in</a></p>
            </div>
        </form>
    </div>
</div>
    
